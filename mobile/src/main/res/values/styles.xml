<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style
        name="Source"
        parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>
    <style name="Source.Normal">
        <item name="android:textSize">@dimen/textNormal</item>
    </style>
    <style name="Source.Small">
        <item name="android:textSize">@dimen/textSmall</item>
    </style>
    <style name="Source.Full">
        <item name="android:maxLines">2147483647</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textSize">@dimen/textNormal</item>
    </style>
    <style
        name="Subhead"
        parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/textColorHint</item>
    </style>
    <style name="Subhead.Normal">
        <item name="android:textSize">@dimen/textSmall</item>
    </style>
    <style name="Subhead.Small">
        <item name="android:textSize">@dimen/textSmall</item>
    </style>
    <style name="Subhead.Full">
        <item name="android:maxLines">2147483647</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textSize">@dimen/textSmall</item>
    </style>
    <style
        name="Title"
        parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>
    <style name="Title.Featured">
        <item name="android:padding">@dimen/space16</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textSize">@dimen/textHeading3</item>
        <item name="android:textColor">@color/textColorInverseLight</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:shadowColor">@color/shadowEnd</item>
    </style>
    <style name="Title.Cozy">
        <item name="android:textSize">@dimen/textHeading3</item>
    </style>
    <style name="Title.Full">
        <item name="android:layout_marginStart">@dimen/space16</item>
        <item name="android:layout_marginEnd">@dimen/space16</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">2147483647</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textSize">@dimen/textHeading3</item>
    </style>
    <style
        name="Description"
        parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/textColorHint</item>
    </style>
    <style name="Description.Cozy">
        <item name="android:maxLines">5</item>
        <item name="android:textSize">@dimen/textNormal</item>
    </style>
    <style name="Description.Full">
        <item name="android:layout_marginStart">@dimen/space16</item>
        <item name="android:layout_marginEnd">@dimen/space16</item>
        <item name="android:maxLines">2147483647</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textSize">@dimen/textNormal</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>
    <style
        name="Button"
        parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Button.Primary">
        <item name="colorButtonNormal">?attr/primaryColor</item>
    </style>
    <style
        name="Icon"
        parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
    <style name="Icon.Small">
        <item name="android:layout_width">@dimen/iconSmall</item>
        <item name="android:layout_height">@dimen/iconSmall</item>
    </style>
    <style
        name="TransparentText"
        parent="@android:style/TextAppearance">
        <item name="android:textColor">#00000000</item>
    </style>
</resources>
