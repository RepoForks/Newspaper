<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/space16"
    android:layout_marginRight="@dimen/space16"
    android:layout_marginTop="@dimen/space16"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cozy_item_header_height">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/avatar"
                android:layout_width="@dimen/cozy_avatar_size"
                android:layout_height="@dimen/cozy_avatar_size"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/space16"
                android:layout_marginRight="@dimen/space16"
                app:placeholderImage="@drawable/thumbnail_placeholder" />
            <TextView
                android:id="@+id/source"
                android:layout_toRightOf="@+id/avatar"
                android:layout_toEndOf="@+id/avatar"
                android:layout_alignTop="@+id/avatar"
                android:text="████████"
                android:textColor="?attr/textColorHint"
                style="@style/Source.Normal" />
            <TextView
                android:id="@+id/publish_date"
                android:layout_toRightOf="@+id/avatar"
                android:layout_toEndOf="@+id/avatar"
                android:layout_alignBottom="@+id/avatar"
                android:text="████████████"
                style="@style/Subhead.Normal" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/cozy_item_image_height"
            android:background="@drawable/thumbnail_placeholder" />
        <TextView
            android:id="@+id/title"
            android:paddingLeft="@dimen/space12"
            android:paddingRight="@dimen/space12"
            android:paddingTop="@dimen/space12"
            android:paddingBottom="@dimen/space8"
            android:text="████████████████████"
            android:textColor="?attr/textColorHint"
            style="@style/Title.Cozy" />
        <TextView
            android:id="@+id/description"
            android:paddingLeft="@dimen/space12"
            android:paddingRight="@dimen/space12"
            android:paddingTop="@dimen/space8"
            android:paddingBottom="@dimen/space12"
            android:text="████████████████████████████████████████████████████████████"
            style="@style/Description.Cozy" />
    </LinearLayout>
</android.support.v7.widget.CardView>
