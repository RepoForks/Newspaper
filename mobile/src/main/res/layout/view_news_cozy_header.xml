<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cozy_item_header_clipped_height"
    android:clipChildren="true">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/cozy_item_header_padded_height"
        android:layout_marginLeft="@dimen/space16"
        android:layout_marginRight="@dimen/space16"
        android:layout_marginTop="@dimen/space16"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cozy_item_header_height">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/avatar"
                android:layout_width="@dimen/cozy_avatar_size"
                android:layout_height="@dimen/cozy_avatar_size"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/space16"
                android:layout_marginRight="@dimen/space16"/>
            <TextView
                android:id="@+id/title"
                android:layout_toRightOf="@+id/avatar"
                android:layout_toEndOf="@+id/avatar"
                android:layout_alignTop="@+id/avatar"
                tools:text="Proin rutrum ipsum"
                style="@style/Title.Normal" />
            <TextView
                android:id="@+id/creation_date"
                android:layout_toRightOf="@+id/avatar"
                android:layout_toEndOf="@+id/avatar"
                android:layout_alignBottom="@+id/avatar"
                tools:text="Phasellus at aliquam dolor"
                style="@style/Subhead.Normal" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
