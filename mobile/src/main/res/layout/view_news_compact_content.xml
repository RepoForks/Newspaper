<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/compact_item_content_item_height"
    android:clipChildren="true">
    <android.support.v7.widget.CardView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/compact_item_content_padded_height"
        android:layout_marginBottom="@dimen/space16"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/compact_card_radius"
        app:cardElevation="@dimen/compact_card_elevation">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/compact_item_content_item_height"
            android:orientation="horizontal">
            <com.github.piasy.biv.view.BigImageView
                android:id="@+id/image"
                android:layout_width="@dimen/compact_item_content_image_size"
                android:layout_height="@dimen/compact_item_content_image_size"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/space16"
                android:layout_marginTop="@dimen/space16"
                app:initScaleType="centerCrop" />
            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space16"
                android:layout_marginEnd="@dimen/space16"
                android:layout_marginTop="@dimen/space24"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/image"
                android:layout_alignWithParentIfMissing="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="?attr/textColor"
                android:textSize="@dimen/textHeading3"
                tools:text="Proin rutrum ipsum" />
            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space16"
                android:layout_marginEnd="@dimen/space16"
                android:layout_marginTop="@dimen/space8"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/image"
                android:layout_below="@+id/title"
                android:layout_alignWithParentIfMissing="true"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="?attr/textColorHint"
                android:textSize="@dimen/textNormal"
                tools:text="Phasellus at aliquam dolor\nProin rutrum ipsum" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
