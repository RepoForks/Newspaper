<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/featured_item_height">
    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/featured_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/featured_image_height"
        android:layout_alignParentTop="true" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/featured_title_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_news_featured">
        <TextView
            android:id="@+id/title"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit"
            style="@style/Heading3.Featured" />
    </FrameLayout>
</RelativeLayout>
